<body onload="checkstatus()">
    <script>
        function checkstatus(){
        console.log(document.getElementById("auto-account").checked);
    }

    </script>
    
<%= form_tag({controller: "account", action: "create"}, method: "post", class: "form-horizontal") do %>
<form class
    <fieldset>
    
    <!-- Form Name -->
    <legend>Account creation</legend>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="accountno">Account No.</label>  
      <div class="col-md-4">
      <input id="account_no" name="accountno" type="text" placeholder="xxxxxxx" class="form-control input-md">
      <span class="help-block">Account no.</span>
      </div>
      <div class="col-md-4">
            <input type="checkbox" id="auto-account" checked data-toggle="toggle" data-on="Auto" data-off="Manual" onchange="fetchaccount(event)">
            <script>
               function fetchaccount(event){
                   if (document.getElementById("auto-account").checked){
                    console.log("onn");
                   }
                   else{
                       console.log("off");
                   }
                   
               } 
            </script>
      </div> 
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="lastname">Lastname</label>  
      <div class="col-md-4">
      <%= text_field 'account', 'lastname' ,:class => "form-control input-md"%>
      <span class="help-block">input your lastname</span>  
      </div>
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="firstname">Firstname</label>  
      <div class="col-md-4">
            <%= text_field 'account', 'firstname' ,:class => "form-control input-md"%>
      <span class="help-block">input your firstname</span>  
      </div>
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="middlename">Middlename</label>  
      <div class="col-md-4">
      <%= text_field 'account', 'middlename' ,:class => "form-control input-md"%>
      <span class="help-block">input your middlename</span>  
      </div>
    </div>
    
    <!-- Button Drop Down -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="gender">Gender</label>
      <div class="col-md-4">
       
        <select class="form-control" id="gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
                   
      </div>
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="headofhouse">Head Of House</label>  
      <div class="col-md-4">
            <%= text_field 'account', 'headofhouse' ,:class => "form-control input-md"%>
      <span class="help-block">Enter the name of the head of the house</span>  
      </div>
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="birthdate">Birthdate</label>  
      <div class="col-md-4">
            <%= text_field 'account', 'birthdate' ,:class => "form-control input-md"%>
      <span class="help-block">Date of birth</span>  
      </div>
    </div>
    
    <!-- Button (Double) -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="submit"></label>
      <div class="col-md-2">
            <%= submit_tag "Create", :class => "btn btn-danger btn-block" %>
            
      </div>
      <div class="col-md-2">
      <!--button id="clear" name="clear" class="btn btn-danger btn-block">Clear</button-->
      </div>
    </div>
    
    </fieldset>
   <% end %>
     
</body>

</html>