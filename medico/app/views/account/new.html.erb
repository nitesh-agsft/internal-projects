<style>
        legend {
            display: block;
            width: 100%;
            padding: 0;
            margin-bottom: 24px;
            font-size: 37px;
            line-height: inherit;
            color: #333;
            border: 0;
            border-bottom: 2px solid #e5e5e5;
            text-align: center;
        }
    </style>
