      </div>
    </div>
    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="account_birthdate">Birthdate</label>  
      <div class="col-md-4">
         <%= f.date_field 'birthdate', :class => "form-control input-md" %>
      <span class="help-block">Date of birth</span>  
      </div>
    </div>
    
    <!-- Button (Double) -->
    <div class="form-group">
      <div class="col-md-5">
      </div>
      <div class="col-md-2">
          <%= f.submit "Update", :class => "btn btn-success btn-block" %>
      </div>
      
    </div>
    
    </fieldset>
   <% end %>